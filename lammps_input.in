# -- setup

units           metal           
dimension       3               
boundary        p p p           
atom_style      atomic          


# -- read data
read_data      start.data


# -- potential

variable acepath string a6train_N3D14_poly_pd8_rin2.32_iden_orthobrr.yace
variable twobodypath string a6train_N3D14_poly_pd8_rin2.32_iden_orthobrr_pairpot.table

pair_style      hybrid/overlay pace table linear 7901
pair_coeff      * * pace ${acepath} I Cs Pb
pair_coeff      1 1 table ${twobodypath} I_I
pair_coeff      1 2 table ${twobodypath} I_Cs
pair_coeff      1 3 table ${twobodypath} I_Pb
pair_coeff      2 2 table ${twobodypath} Cs_Cs
pair_coeff      2 3 table ${twobodypath} Cs_Pb
pair_coeff      3 3 table ${twobodypath} Pb_Pb



# -- masses

mass		    1	    126.90447
mass            2       132.90545
mass            3       207.2



# -- simulation

variable Nsteps equal   1000
variable tlog   equal   10
variable tdump  equal   10
timestep        0.004 

variable Tstart equal   480
variable Tend   equal   480
variable Tdamp  equal   0.4

variable Pstart   equal   1.0
variable Pend   equal   1.0
variable Pdamp  equal   1.0


# -- output

thermo_style    custom step dt time temp press pe ke etotal density vol enthalpy lx ly lz xy xz yz
thermo          ${tlog}

thermo_modify format 6 %20.15g
thermo_modify format 7 %20.15g
thermo_modify format 8 %20.15g
thermo_modify format 9 %20.15g
thermo_modify format 10 %20.15g
thermo_modify format 11 %20.15g
thermo_modify format 12 %20.15g
thermo_modify format 13 %20.15g


# -- run

velocity all create ${Tstart} 832109 dist gaussian sum no mom yes rot yes
fix             static all momentum 5000 linear 1 1 1 angular rescale
fix             traj all npt temp ${Tstart} ${Tend} ${Tdamp} tri ${Pstart} ${Pend} ${Pdamp}

dump write_traj0 all custom ${tdump} dump0.lammpstrj element xu yu zu
dump_modify write_traj0 sort id element I Cs Pb
run             ${Nsteps}
